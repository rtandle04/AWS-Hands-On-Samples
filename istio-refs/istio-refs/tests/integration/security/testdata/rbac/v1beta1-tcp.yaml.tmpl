# The following policy denies request with path "/data" to port 8090 for workload b

apiVersion: "security.istio.io/v1beta1"
kind: AuthorizationPolicy
metadata:
  name: policy-b-deny
  namespace: "{{ .Namespace }}"
spec:
  selector:
    matchLabels:
      "app": "b"
  action: DENY
  rules:
  - to:
    - operation:
        paths: ["/data"]
        ports: ["8090"]
---

